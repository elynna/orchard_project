<?xml version="1.0"?>
<launch>


<arg name="show_rviz" default="true"/>

	<include file="$(find gazebo_ros)/launch/empty_world.launch">
		<arg name="world_name" value="$(find mybot_gazebo)/worlds/mybot.world"/>
		<arg name="gui" value="true"/>
	</include>

	<!-- ros_control mybot launch file -->
	<include file="$(find mybot_control)/launch/mybot_control.launch" />

	<!-- urdf xml robot description loaded on the Parameter Server, converting the xacro into a proper urdf file-->
	<param name="robot_description" command="$(find xacro)/xacro.py '$(find mybot_description)/urdf/mybot.xacro'" />

	<!-- push robot_description to factory and spawn robot in gazebo -->
	<node name="mybot_spawn" pkg="gazebo_ros" type="spawn_model" output="screen"
	 args="-urdf -x 0 -y -6 -Y 1.5708 -param robot_description -model mybot" />


<group if="$(arg show_rviz)">
  <node name="rviz" pkg="rviz" type="rviz" output="screen" args="-d $(find mybot_gazebo/launch/gazebo.rviz"/>
</group>


</launch>
